FROM {{ inventory_hostname }}:{{ docker_registry_port }}/{{base_os_image}}_jre7

MAINTAINER {{ base_image_maintainer }}

RUN [ "groupadd", "-g", "{{ swift_group_id }}", "swift" ]
RUN [ "useradd", "-u" , "{{ swift_user_id }}", "-g", "{{ swift_group_id }}", "swift" ]

ADD SBusPythonFacade-1.0.linux-x86_64.tar.gz            /
RUN ["chmod", "-R" ,"0755", "/usr/local/lib/python2.7/dist-packages/SBusPythonFacade"]
RUN ["chmod", "-R" ,"0755", "/usr/local/lib/python2.7/dist-packages/SBusPythonFacade-1.0.egg-info"]


COPY sbus.so                                            /usr/local/lib/python2.7/dist-packages/
RUN ["chmod", "0755", "/usr/local/lib/python2.7/dist-packages/sbus.so"]

COPY SBusJavaFacade.jar                                 /opt/ibm/
RUN ["chmod", "0744", "/opt/ibm/SBusJavaFacade.jar"]

COPY libjsbus.so                                        /opt/ibm/
RUN ["chmod", "0755", "/opt/ibm/libjsbus.so"]

COPY SDaemon.jar                                        /opt/ibm/
RUN ["chmod", "0744", "/opt/ibm/SDaemon.jar"]

COPY SCommon.jar                                        /opt/ibm/
RUN ["chmod", "0744", "/opt/ibm/SCommon.jar"]

ADD storlet_daemon_factory-1.0.linux-x86_64.tar.gz      /
RUN ["chmod", "-R" ,"0755", "/usr/local/lib/python2.7/dist-packages/storlet_daemon_factory"]
RUN ["chmod", "-R" ,"0755", "/usr/local/lib/python2.7/dist-packages/storlet_daemon_factory-1.0.egg-info"]

COPY init_container.sh                                  /opt/ibm/
RUN ["chmod", "0755", "/opt/ibm/init_container.sh"]

CMD ["prod", "/mnt/channels/factory_pipe","DEBUG"]
ENTRYPOINT ["/opt/ibm/init_container.sh"]
