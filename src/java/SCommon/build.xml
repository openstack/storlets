<project>
    <property name="jarname" value="SCommon.jar"/>
    <property environment="env"/>
    <property name="libdir" value="/usr/local/lib/storlets/java"/>

    <target name="clean">
        <delete dir="bin" />
    </target>

    <target name="java">
        <mkdir dir="bin" />
        <javac srcdir="src/main" destdir="bin" includeantruntime="false">
            <classpath>
                <pathelement path="../SBus/bin/SBusJavaFacade.jar"/>
                <pathelement path="../dependencies/json_simple-1.1.jar"/>
                <pathelement path="../dependencies/slf4j-api-1.7.36.jar"/>
                <pathelement path="../dependencies/logback-classic-1.2.11.jar"/>
                <pathelement path="../dependencies/logback-core-1.2.11.jar"/>
                <pathelement path="."/>
            </classpath>
        </javac>
    </target>

    <target name="jar" depends="java">
        <jar destfile="bin/${jarname}" basedir="bin">
            <manifest>
                <attribute name="Main-Class"
                           value="org.openstack.storlet.daemon.IStorlet" />
            </manifest>
        </jar>
    </target>

    <target name="test">
        <javac srcdir="test" destdir="bin" includeantruntime="false">
            <classpath>
                <pathelement path="."/>
            </classpath>
        </javac>
    </target>

    <target name="build" depends="clean, jar, test">
    </target>

    <target name="install" depends="build">
        <mkdir dir="${libdir}"/>
        <copy file="bin/${jarname}" todir="${libdir}"/>
    </target>

    <target name="uninstall">
        <delete file="${libdir}/${jarname}"/>
    </target>

</project>
